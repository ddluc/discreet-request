{
  "compilerOptions": {
    "target": "ESNext",                          
    "module": "commonjs",                    
    "lib": ["ESNext"],   
    "allowJs": false,
    "outDir": "build",                          
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  }, 
  "exclude": ["src/tests"]
}